<header id="header">
    <section class="Contenedor-Header-Img-barra">
        <div class="Contenedor-Imagen-LOGO">
            <a href="/"><img id="imagen-LOGO" src="/images/logo.png" alt="Logo El Rincon del Libro"></a>
        </div>

        <div class="Contenedor-BarraDeBusqueda-Lupa">

            <form action="/search" method="GET">
                <input class="BarraDeBusqueda-Lupa" type="text" name="keywords" placeholder="Buscar Libros"
                    class="search-form_input">
                <button class="Lupa" type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>

        <div class="Contenedor-Icono-Notificacion">
            <button id="Icono-Notificacion" type="submit"><i class="fa-regular fa-bell"></i></button>
        </div>
        <% if(isAnUserLoged) { %>

            <div class="nombre__imagen">
                <div class="Contenedor-Icono-Perfil">
                    <img src="/images/ImageUsers/<%= dataUser.image %>" alt="Imagen Usuario">
                    <!-- <i class="fa-regular fa-user"></i></button> -->
                </div>
                <div class="userName">
                    <strong>
                        <%= dataUser.name %>
                    </strong>
                </div>
            </div>
            <% }%>

    </section>
    <nav class="Contenedor-Lista">
        <ul class="Lista" type="none">
            <div id="Inicio">
                <li><a href="/">INICIO</a></li>
            </div>
            <div id="Biblioteca">
                <li><a href="/biblioteca">BIBLIOTECA</a></li>
            </div>
            <div id="Perfil">
                <li><a href="/iniciar-sesion">PERFIL</a></li>
            </div>
            <div id="Nosotros">
                <li><a href="/biblioteca/CreacionDeProductos">CREAR</a></li>
            </div>
            <div id="PreguntasFrecuentes">
                <li><a href="">PREGUNTAS FRECUENTES</a></li>
            </div>
            <div id="CarritoDeCompras">
                <li id="Icono-CarritoDeCompras"><a href="/carrito-de-compra"><i
                            class="fa-solid fa-cart-shopping"></i></a></li>
            </div>
        </ul>
    </nav>
</header>